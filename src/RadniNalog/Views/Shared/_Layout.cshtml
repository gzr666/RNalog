@using Microsoft.AspNetCore.Identity
@using RadniNalog.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html ng-app=@ViewBag.AppName>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RadniNalog</title>

    <environment names="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <link rel="stylesheet" href="https://npmcdn.com/angular-toastr/dist/angular-toastr.css" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.6/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />

        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="https://npmcdn.com/angular-toastr/dist/angular-toastr.css" />
    </environment>
    @Html.ApplicationInsightsJavaScript(TelemetryConfiguration)
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">RadniNalog</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a asp-area="" asp-controller="Home" asp-action="Index">RNalog</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="Administracija">Administracija</a></li>
                    <li><a ui-sref="statistika">Statistika</a></li>
                    
                </ul>
                @await Html.PartialAsync("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2017 - RadniNalog</p>
        </footer>
    </div>

    <environment names="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/lib/angular/angular.js" asp-append-version="true"></script>
        <script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.8/angular-ui-router.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        <script src="~/app/app.js" asp-append-version="true"></script>
        <script src="~/app/appAdmin.js"></script>
        <script src="~/controllers/HomeController.js" asp-append-version="true"></script>
        <script src="~/controllers/AdminController.js"></script>
        <script src="~/controllers/CreateController.js"></script>
        <script src="~/controllers/ChartController.js"></script>
        <script src="~/controllers/ChartController2.js"></script>
        <script src="~/services/zaposlenikService.js"></script>
        <script src="~/services/vrstaRadaService.js"></script>
        <script src="~/services/mjestoRadaService.js"></script>
        <script src="~/services/automobilService.js"></script>
        <script src="~/controllers/radniciController.js"></script>
        <script src="~/controllers/vrstaRadaController.js"></script>
        <script src="~/controllers/CreateVrstaRadaController.js"></script>
        <script src="~/controllers/CreateMjestoRadaController.js"></script>
        <script src="~/controllers/mjestoRadaController.js"></script>
        <script src="~/controllers/automobilController.js"></script>
        <script src="~/controllers/CreateAutomobilController.js"></script>
        <script src="https://npmcdn.com/angular-toastr/dist/angular-toastr.tpls.js"></script>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ng-table/0.8.3/ng-table.min.css">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/ng-table/0.8.3/ng-table.min.js"></script>
        <script src="~/lib/Chart.js" type="text/javascript"></script>
        <script src="~/lib/angular-chart.js" type="text/javascript"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.6/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal">
        </script>
        <script src="~/lib/angular/angular.js" asp-append-version="true"></script>
        <script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.8/angular-ui-router.min.js"></script>
        
        <script src="~/js/site.min.js" asp-append-version="true"></script>
        <script src="~/app/app.js" asp-append-version="true"></script>
        <script src="~/app/appAdmin.js"></script>
        <script src="~/controllers/HomeController.js"></script>
        <script src="~/controllers/AdminController.js"></script>
        <script src="~/controllers/CreateController.js"></script>
        <script src="~/controllers/ChartController.js"></script>
        <script src="~/controllers/ChartController2.js"></script>
        <script src="~/controllers/vrstaRadaController.js"></script>
        <script src="~/services/zaposlenikService.js"></script>
        <script src="~/services/vrstaRadaService.js"></script>
        <script src="~/services/automobilService.js"></script>
        <script src="~/controllers/radniciController.js"></script>
        <script src="~/services/mjestoRadaService.js"></script>
        <script src="~/controllers/CreateVrstaRadaController.js"></script>
        <script src="~/controllers/CreateMjestoRadaController.js"></script>
        <script src="~/controllers/mjestoRadaController.js"></script>
        <script src="~/controllers/automobilController.js"></script>
        <script src="~/controllers/CreateAutomobilController.js"></script>
        <script src="https://npmcdn.com/angular-toastr/dist/angular-toastr.tpls.js"></script>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ng-table/0.8.3/ng-table.min.css">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/ng-table/0.8.3/ng-table.min.js"></script>
        <script src="~/lib/Chart.js" type="text/javascript"></script>
        <script src="~/lib/angular-chart.js" type="text/javascript"></script>



    </environment>

    @RenderSection("scripts", required: false)
</body>
</html>
